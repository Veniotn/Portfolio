<UserControl xmlns:PROG2500_A2_Chinook="clr-namespace:PROG2500_A2_Chinook"
             x:Class="PROG2500_A2_Chinook.InvoiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PROG2500_A2_Chinook"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UserControl.Resources>
        <CollectionViewSource x:Key="customerViewSource"/>
    </UserControl.Resources>

    <!--invoice information-->
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Order Date: "/>
        <TextBlock Text="{Binding InvoiceDateString}"/>
        <TextBlock Text="Total: $"/>
        <TextBlock Text="{Binding Total}"/>
        <TextBlock Text="Quantity: "/>
        <TextBlock Text="{Binding Quantity}"/>
    </StackPanel>
</UserControl>
