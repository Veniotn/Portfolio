<Page x:Class="PROG2500_A2_Chinook.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG2500_A2_Chinook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Page.Resources>
        <!--specific styling overrides for the home page-->
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Height" Value="67"/>
        </Style>
    </Page.Resources>
    
    <!--welcome text-->
    <StackPanel x:Name="mainStack" Orientation="Vertical">
        <TextBlock Style="{StaticResource pageHeaderStyle}" Text="Chinook  - Your one stop shop for great music"/>
        <TextBlock Style="{StaticResource pageHeaderStyle}" Text="Please select a page to begin your musical journey"/>
    </StackPanel>
</Page>
